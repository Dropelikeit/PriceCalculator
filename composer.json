{
  "name": "marcel-strahl/price-calculator",
  "description": "An service to calculate prices",
  "keywords": ["price", "calculator"],
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Marcel Strahl",
      "email": "info@marcel-strahl.de"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "phpstan/phpstan": "^0.11.19",
    "phpstan/phpstan-phpunit": "^0.11.2",
    "phpunit/phpunit": "8.0.6"
  },
  "autoload": {
    "psr-4": {
      "MarcelStrahl\\PriceCalculator\\": "src/",
      "MarcelStrahl\\PriceCalculator\\Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "7.3"
    },
    "sort-packages": true
  },
  "prefer-stable": true,
  "scripts": {
    "cs-check": "php-cs-fixer -v --dry-run --using-cache=no fix",
    "cs-fix": "php-cs-fixer --using-cache=no fix",
    "test": "phpunit --configuration ~/PriceCalculator/phpunit.xml",
    "analyze": "vendor/bin/phpstan analyse -c phpstan.neon.dist src tests",
    "check": [
      "@cs-check",
      "@analyze",
      "@test"
    ]
  }
}
